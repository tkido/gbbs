<h1 class="error-title">${ error.title }</h1>
<div class="error">
  ${ error.message }
<?py if hasattr(error, "continue_uri") or hasattr(error, "retry_uri"): ?>
  <div class="navigation">
    <ul>
<?py if hasattr(error, "continue_uri"): ?>
      <li><a href="/#{ ns }${ error.continue_uri }">${ error.continue_label }</a></li>
<?py #end ?>
<?py if hasattr(error, "retry_uri"): ?>
     <li><a href="/#{ ns }${ error.retry_uri }">もう一度試す</a></li>
<?py #end ?>
    </ul>
  </div>
<?py #end ?>
</div>
