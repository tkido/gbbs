<?xml version="1.0" encoding="utf-8" ?>
<project name="gbbs" default="test">
  
  <property file="build.properties" />
  
  <target name="test">
    <echo message="Exec below, if you want deploy."/>
    <echo message="appcfg.py --email=${email} update server"/>
  </target>
  
  <target name="production">
    <replace file="server/app.yaml"
             token="tohobbs-hrd"
             value="${appid}"
             encoding="UTF-8" />
    
    <replace dir="server"
             token="debug=True"
             value="debug=False"
             encoding="UTF-8">
        <include name="main.py" />
        <include name="sysadmin.py" />
    </replace>
    
    <replace file="server/config.py"
             token="foobar"
             value="${salt}"
             encoding="UTF-8" />
    <replace file="server/config.py"
             token="MAX_RESES_IN_THREAD = 3"
             value="MAX_RESES_IN_THREAD = 1000"
             encoding="UTF-8" />
    <replace file="server/config.py"
             token="MAX_THREADS_IN_BOARD = 3"
             value="MAX_THREADS_IN_BOARD = 1000"
             encoding="UTF-8" />
    
    <echo message="Exec below, if you want deploy."/>
    <echo message="appcfg.py --email=${email} update server"/>
  </target>
  
</project>